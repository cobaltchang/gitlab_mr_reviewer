[MASTER]
# Use multiple processes to speed up Pylint
jobs=1

# Add the repository root to the Python path so relative imports work
init-hook='import sys; sys.path.insert(0, ".")'

[MESSAGES CONTROL]
# Only fail on errors, not warnings or conventions
# This allows the CI to pass while still providing feedback on code quality
# Specific warnings can be enabled incrementally as the codebase improves
disable=
    C,  # Convention messages
    R,  # Refactoring messages
    W,  # Warning messages

# Enable specific checks that are important
enable=
    E,  # Error messages

[REPORTS]
# Disable the report section to reduce output noise
reports=no

# Set the output format
output-format=text

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,ex,Run,_,id,mr,db

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of attributes for a class
max-attributes=10

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=10
